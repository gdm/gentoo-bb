FROM ${NAMESPACE}/openssl
MAINTAINER ${MAINTAINER}

ADD rootfs.tar /

COPY etc /etc

RUN chmod +x $(find /etc/service -name run) && \
    ln -s /etc/s6_finish_default /etc/service/nginx/finish && \
    ln -s /etc/service/nginx /service

EXPOSE 80 443

VOLUME [ "/etc/nginx" ]
VOLUME [ "/var/www/vhosts" ]
